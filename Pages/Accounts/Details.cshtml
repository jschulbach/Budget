@page
@model Budget.Pages.Accounts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Account.AccountNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Account.AccountNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Account.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Account.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Account.CreatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Account.CreatedDate)
        </dd>
    </dl>
</div>
<div>
<table>
@foreach (var item in Model.Transaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TransactionID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TransactionID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TransactionID">Delete</a>
            </td>
        </tr>
}     
</table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Account.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
